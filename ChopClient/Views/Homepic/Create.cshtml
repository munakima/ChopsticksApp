@{
    ViewBag.Title = "Create"; 
}
@model ChopClient.ViewModels.HomepicViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

    <div style="margin:0px 50px" class="container">
        <div class="bs-docs-section">
            <div class="row">
                <div class="col-lg-2">
                    <div class="page-header">
                        <h1 id="forms">Forms</h1>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6">
                    <div class="well bs-component">
                        @using (Html.BeginForm("Create", "AdminHomepic", FormMethod.Post))
                        {
                            <form class="form-horizontal">
                                <fieldset>
                                    <legend>Create</legend>
                                    <br />
                                    <div class="form-group">
                                        <label for="inputUrl" class="col-lg-2 control-label">@Html.LabelFor(model => model.pic.Url)</label>
                                        <div class="col-lg-10">
                                            @Html.TextBoxFor(model => model.pic.Url)
                                        </div>
                                    </div>
                                    <br />
                                    <br />
                                    <br />
                                    <br />
                                    <div class="form-group">
                                        <div class="col-lg-10 col-lg-offset-2">
                                            <button type="reset" class="btn btn-default">Reset</button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                            <button type="submit" class="btn btn-primary">Submit</button> @Html.HiddenFor(model => model.pic.Id)
                                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

                                            <a class="btn btn-success" href="@Url.Action("Index", "AdminHomepic", "AdminHomepic")">cancel</a>

                                        </div>
                                    </div>
                                </fieldset>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
