@model IEnumerable<Models.Food>
@{
    ViewBag.Title = "Index";
}

<div style="background:white;padding:30px;margin-top:80px">
    <br />
    <br />
    <a class="btn btn-success" href="@Url.Action("Create", "AdminFood")">Add a new food</a>
    <br />
    <br />
    <table cellpadding="2" cellspacing="2" border="1" class="table table-striped table-hover ">
        <tr>
            <th width="20%">Name</th>
            <th width="10%">Category</th>
            <th width="10%">Price</th>
            <th width="35%">Detail</th>
            <th width="25%">Action</th>
        </tr>
        @foreach (var food in Model)
        {
            <tr>
                <td>@food.Name</td>
                <td>@food.Category.Name</td>
                <td>@food.Price</td>
                <td>@food.Detail</td>
                <td>
                    &nbsp; &nbsp; <a class="btn btn-danger" onclick="return confirm('Are you sure?')"
                       href="@Url.Action("Delete", "AdminFood", new { id = food.Id })">Delete</a> &nbsp; &nbsp;
                    <a class="btn btn-success" href="@Url.Action("Edit", "AdminFood", new { id = food.Id })">Edit</a> &nbsp; &nbsp;
                   
                </td>
            </tr>
        }


    </table>

</div>
