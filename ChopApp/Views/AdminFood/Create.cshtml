@model Models.Food
@{
    ViewBag.Title = "Create";
}


<div style="background:white; padding:30px;margin-top:80px">

    <div style="margin:0px 50px" class="container">
        <div class="bs-docs-section">
            <div class="row">
                <div class="col-lg-2">
                    <div class="page-header">
                        <h1 id="forms">Forms</h1>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <div class="well bs-component">
                        @using (Html.BeginForm("Create", "AdminFood", FormMethod.Post))
                        {
                            <form class="form-horizontal">
                                <fieldset>
                                    <legend>Create</legend>
                                    <br />
                                    <div class="form-group">
                                        <label for="inputName" class="col-md-3 control-label">@Html.LabelFor(model => model.Name)</label>
                                        <div class="col-lg-10">
                                            @Html.TextBoxFor(model => model.Name)
                                        </div>
                                    </div>
                                    
                                    <div class="form-group">
                                        <label for="inputPrice" class="col-md-3 control-label">@Html.LabelFor(model => model.Price)</label>
                                        <div class="col-lg-10">
                                            @Html.TextBoxFor(model => model.Price)
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="inputCategory" class="col-md-3 control-label">@Html.LabelFor(model => model.CategaryId, "Category")</label>
                                        <div class="col-lg-10">
                                            @Html.DropDownList("CategaryId")
                                            @Html.ValidationMessageFor(model => model.CategaryId)
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="inputDetail" class="col-md-3 control-label">@Html.LabelFor(model => model.Detail)</label>
                                        <div class="col-lg-10">
                                            @Html.TextBoxFor(model => model.Detail)
                                        </div>
                                    </div>
                                    <br />
                                    <div >
                                        <div class="col-lg-8">
                                            <button type="reset" class="btn btn-default">Reset</button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                            <button type="submit" class="btn btn-primary">Submit</button> @Html.HiddenFor(model => model.Id)
                                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

                                            <a class="btn btn-success" href="@Url.Action("Index", "AdminFood", "AdminFood")">cancel</a>

                                        </div>
                                    </div>
                                </fieldset>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
