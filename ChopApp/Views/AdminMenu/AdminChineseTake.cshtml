
@model IEnumerable<Models.Menu>
@{
    ViewBag.Title = "Index";
}

<div style="background:white;padding:20px;margin-top:80px">
    <h1 style="font-weight:900 ; text-align:center">Chinese Take Away</h1>
    <br />
    <br />
    <a class="btn btn-success" href="@Url.Action("CreateChineseTake", "AdminMenu")">Add a new food to menu</a>
    <br />
    <br />
    <table cellpadding="2" cellspacing="2" border="1" class="table table-striped table-hover ">
        <tr>
            <th width="10%">Type</th>
            <th width="20%">Name</th>
            <th width="15%">Category</th>
            <th width="10%">Price</th>
            <th width="30%">Detail</th>
            <th width="15%">Action</th>
        </tr>
        @foreach (var menu in Model)
        {
            <tr>
                <td>@menu.menuType.Name</td>
                <td>@menu.food.Name</td>
                <td>@menu.food.Category.Name</td>
                <td>@menu.food.Price</td>
                <td>@menu.food.Detail</td>
                <td>
                    &nbsp; &nbsp; <a class="btn btn-danger" onclick="return confirm('Are you sure?')"
                                     href="@Url.Action("DeleteChineseTake", "AdminMenu", new { id = menu.Id })">Delete</a> &nbsp; &nbsp;

                </td>
            </tr>
        }


    </table>

</div>


