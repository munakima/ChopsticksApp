@model Models.HomePic
@{
    ViewBag.Title = "Edit";
}

<div style="background:white;padding:30px;margin-top:80px">
    <div style="margin:0px 50px" class="container">
        <div class="bs-docs-section">
            <div class="row">
                <div class="col-lg-2">
                    <div class="page-header">
                        <h1 id="forms">Forms</h1>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6">
                    <div class="well bs-component">
                        @using (Html.BeginForm("Edit", "AdminHomepic", FormMethod.Post))
                        {
                            <form class="form-horizontal">
                                <fieldset>
                                    <legend>Edit</legend>
                                    <br />
                                    <div class="form-group">
                                        <label for="inputEmail" class="col-lg-2 control-label">@Html.LabelFor(model => model.Url)</label>
                                        <div class="col-lg-10">
                                            @Html.TextBoxFor(model => model.Url)
                                        </div>
                                    </div>
                                    <br />
                                    <br />
                                    <br />
                                    <br />
                                    <div class="form-group">
                                        <div class="col-lg-10 col-lg-offset-2">
                                            <button type="reset" class="btn btn-default">Reset</button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                            <button type="submit" class="btn btn-primary">Submit</button> @Html.HiddenFor(model => model.Id)
                                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

                                            <a class="btn btn-success" href="@Url.Action("Index", "AdminHomepic", "AdminHomepic")">cancel</a>

                                        </div>
                                    </div>
                                </fieldset>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>